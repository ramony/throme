{
  "name": "Throme",
  "manifest_version": 2,
  "version": "1.0.0",
  "app": {
    "launch": {
      "local_path": "index.html"
    }
  },
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "static/js/main.js"
      ],
      "css": [
        "static/css/main.css"
      ]
    }
  ],
  "icons": {
    "16": "logo512.png",
    "48": "logo512.png",
    "128": "logo512.png"
  },
  "description": "__MSG_description__",
  "permissions": [
    "notifications",
    "tabs",
    "http://*/*",
    "https://*/*",
    "contextMenus",
    "unlimitedStorage",
    "webRequest",
    "webRequestBlocking"
  ]
}